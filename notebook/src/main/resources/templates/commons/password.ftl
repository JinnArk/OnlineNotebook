<!-- main content start-->
<div id="page-wrapper">
	<div class="main-page">
		
		<div class="grids">
			<div class="typo-heading">
				<h2>修改密码</h2>
			</div>
			<div class="panel panel-widget forms-panel">
				<div class="forms">
					<div class="form-title">
						<h4>修改密码 :</h4>
					</div>
					<div class="form-three widget-shadow" id="repasswordForm">
						<div class=" panel-body-inputin">
							<form class="form-horizontal">
								
								<div class="form-group">
									<label class="col-md-2 control-label">旧密码:</label>
									<div class="col-md-8">
										<div class="input-group input-icon right">
											<span class="input-group-addon">
												<i class="fa fa-envelope-o"></i>
											</span>
											<input name="oldpassword" class="form-control1" type="text" placeholder="旧密码">
										</div>
									</div>
									
								</div>
								
								<div class="form-group">
									<label class="col-md-2 control-label">新密码:</label>
									<div class="col-md-8">
										<div class="input-group input-icon right">
											<span class="input-group-addon">
												<i class="fa fa-envelope-o"></i>
											</span>
											<input name="password" class="form-control1" type="text" placeholder="新密码"
											sucmsg="用户名验证通过！" nullmsg="请输入新密码！" errormsg="请用邮箱或手机号码注册！">
										</div>
									</div>
									
								</div>
								
								<div class="form-group">
									<label class="col-md-2 control-label">重复新密码:</label>
									<div class="col-md-8">
										<div class="input-group input-icon right">
											<span class="input-group-addon">
												<i class="fa fa-envelope-o"></i>
											</span>
											<input name="repassword" class="form-control1" type="text" placeholder="请重复一边新密码">
										</div>
									</div>
									
								</div>
								
								<!-- has-success -->
								<!-- has-error -->
								
								<div class="form-group">
									<div class="col-md-10">
										<button type="button" name="changePassword" class="btn btn-success pull-right">修改密码</button> 
									</div>
								</div> 
							</form>
						</div>
					</div>
				</div>
			</div>
			
		</div>
	</div>
</div>
