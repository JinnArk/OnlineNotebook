<div class="login-body">
	<div class="login-heading">
		<h1>找回密码</h1>
	</div>
	<div class="login-info">
		<form>
			<div class="col-xs-12 col-sm-12">
				<input type="text" name="findemail" class="user" placeholder="邮箱">
			</div>
			<div class="col-xs-12 col-sm-12">
				<input type="text" name="newpassword" class="user" placeholder="新密码">
			</div>
